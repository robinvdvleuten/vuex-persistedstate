{
  "name": "vuex-persistedstate",
  "description": "Persist Vuex state with localStorage.",
  "version": "2.0.0",
  "license": "MIT",
  "author": "Robin van der Vleuten <robin@webstronauts.co>",
  "keywords": [
    "vue",
    "vuex",
    "plugin"
  ],
  "homepage": "https://github.com/robinvdvleuten/vuex-persistedstate#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/robinvdvleuten/vuex-persistedstate.git"
  },
  "bugs": {
    "url": "https://github.com/robinvdvleuten/vuex-persistedstate/issues"
  },
  "main": "dist/vuex-persistedstate.js",
  "browser": "dist/vuex-persistedstate.umd.js",
  "jsnext:main": "src/plugin.js",
  "files": [
    "dist",
    "src",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "mkdir -p dist && npm run -s build:cjs && npm run -s build:umd",
    "build:cjs": "rollup -c -f cjs | uglifyjs -cm -o $npm_package_main",
    "build:umd": "rollup -c -n $npm_package_name -f umd | uglifyjs -cm -o $npm_package_browser",
    "precommit": "npm run build && lint-staged",
    "prepublish": "npm run build",
    "test": "jest --env=jsdom"
  },
  "lint-staged": {
    "src/**/*.js": [
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "dependencies": {
    "lodash.merge": "^4.6.0"
  },
  "devDependencies": {
    "babel-jest": "^20.0.3",
    "babel-preset-env": "^1.5.2",
    "dom-storage": "^2.0.2",
    "eslint": "^3.11.1",
    "husky": "^0.13.3",
    "jest": "^20.0.4",
    "lint-staged": "^3.4.0",
    "prettier": "^1.1.0",
    "rollup": "^0.36.0",
    "rollup-plugin-buble": "^0.14.0",
    "uglify-js": "^2.7.3",
    "vue": "^2.0.0",
    "vuex": "^2.0.0"
  },
  "peerDependencies": {
    "vue": "^2.0.0",
    "vuex": "^2.0.0 || ^3.0.0"
  }
}
